#include <stdio.h>

int main(void)
{
    int x = get_integer();
    int y = get_integer();

    int sum = multi(x,y);

    printf("합 : %d 차 : %d\n",add(x,y),minus(x,y));
    printf("곱 : %d 나누기 : %d",multi(x,y),div(x,y));
    return 0;
}

int get_integer()
{
    int value;

    printf("정수를 입력하시오:");
    scanf("%d",&value);

    return value;
}

int add (int x, int y)
{
    return x + y;
}

int minus (int x, int y)
{
    return x - y;
}

int multi (int x, int y)
{
    return x * y;
}

int div (int x, int y)
{
    return x / y;
}
